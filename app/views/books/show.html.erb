<p style="color: green"><%= notice %></p>

<%= render 'books/book', book: @book %>

 
<div class="mt-2">
  <%= link_to "Edit this book", edit_book_path(@book), class:"btn btn-warning" %>  
  <%= link_to "Back to books", books_path, class:"btn btn-primary" %>

  <%= button_to "Destroy this book", @book, method: :delete, class:"mt-2 btn btn-danger" %>
</div>

