<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, style: "display: block", class: "form-label" %>
    <%= form.text_field :title, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :author, style: "display: block", class: "form-label" %>
    <%= form.text_field :author, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :publisher, style: "display: block", class: "form-label" %>
    <%= form.text_field :publisher, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, style: "display: block", class: "form-label" %>
    <%= form.text_field :genre, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :published, style: "display: block", class: "form-label" %>
    <%= form.date_field :published, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :synopsis, style: "display: block", class: "form-label" %>
    <%= form.text_area :synopsis, class:"form-control", required: true %>
  </div>


  <div class="mb-3">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
