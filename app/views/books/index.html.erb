<p style="color: green"><%= notice %></p>

<h1>Books Available</h1>
<%if user_signed_in? %>
  <% if current_user.kindUser == 1 %>
    <%= link_to "Create a book", new_book_path, class: 'btn btn-outline-secondary' %>
  <% end %>
    <%= link_to "My Loans", loans_path, class: 'btn btn-outline-primary' %>
    <%= link_to "Request a Book", new_loan_path, class: 'btn btn-outline-warning' %>
<% else %>
  <h2>USER STATE OFF</h2>
<% end %>

<div id="books">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Genre</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <%= render 'books/booktable', book: book %>
      <% end %>      
    </tbody>
  </table>
</div>

<div class="mx-auto" style="width: 50%;">
    <%== pagy_bootstrap_nav(@pagy) %>
</div>