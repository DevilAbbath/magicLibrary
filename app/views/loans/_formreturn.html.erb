<%= form_with(model: loan) do |form| %>
  <% if loan.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
        <% loan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>You are returning the book <%= @loan.book.title %> </h3>
  <h4>by author <%= @loan.book.author %> </h4>

  <div class="mb=3">
    <%= form.label :returnDate, style: "display: block", class:"form-label" %>
    <%= form.date_field :returnDate, class:"form-control" %>
  </div>

  <%= link_to "Back to loans", loans_path, class:"btn btn-primary" %>

  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
