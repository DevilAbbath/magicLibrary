    <%= form.label :book_id, style: "display: block", class: "form-label"  %>
    <%= form.collection_select :book_id, Book.all, :id, :title, class:"dropdown-menu" %>
  </div>

  <div class="mb-3">
    <%= form.label :loanDate, style: "display: block", class: "form-label"  %>
    <%= form.date_field :loanDate, class:"form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
